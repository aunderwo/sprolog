<h1>Editing project</h1>

<%= error_messages_for :project %>

<% form_for(@project) do |f| %>

  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b>Description</b><br />
    <%= f.text_area :description, :cols => 80 %>
  </p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>
