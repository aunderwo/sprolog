<div id="general">
<p>
  <b>Task:</b>
  <%= link_to @step.task.number, :controller => :tasks, :action => :show, :id => @step.task_id %>
</p>

<p>
  <b>Description:</b>
  <%= RedCloth.new(@step.description).to_html %>
</p>

<p>
  <b>Created at:</b>
  <%=h nice_date(@step.created_at) %>
</p>


<p>
  <b>Last updated at:</b>
  <%=h nice_date(@step.updated_at) %>
</p>
<% if current_user == @step.task.project.user %>
  <p>
    <%= link_to "Edit", edit_step_path(@step) %> | <%= link_to "Destroy", @step, :confirm => 'Are you sure?', :method => :delete %>
  </p>
<% end %>
</div>
