<div id="details">
<table border="1">
  <tr>
    <th>Task number</th>
    <th>Project</th>
    <th>Short description</th>
    <th>Status</th>
    <th>Created at</th>
    <th>Last updated at</th>
  </tr>

<% for task in @tasks %>
  <tr>
    <td><%= link_to task.number, :controller => :tasks, :action => :show, :id => task.id %></td>
    <td><%=h task.project.name %></td>
    <td><%=h task.short_description %></td>
    <td><%=h task.status %></td>
    <td><%=h task.created_at %></td>
    <td><%=h task.updated_at %></td>
    <td><%= link_to 'Destroy', task, :confirm => 'Are you sure?', :method => :delete %></td>

  </tr>
<% end %>
</table>
</div>
